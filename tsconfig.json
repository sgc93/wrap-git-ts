{
  "compilerOptions": {
    "lib": ["ES2024", "DOM"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
